<div class="container-fluid"> 
  <nav class="navbar navbar-expand-lg navbar-light white">
  <div class='navbar-brand center mr-sm-2'>
    <%= inline_svg "logo-small.svg"%>
  </div>
    <%= form_tag({:controller => "search", :action => "index"},:class => "center", :method => "get") do %>
      <div class="search-container searchbar mr-sm-2">    
      <%= text_field_tag "q", @query, class:"form-control white", required: true%>
      <%= fa_icon "search", class: "icon pull-right" %>
      </div>
    <% end %>
  </nav>
  <div></div>
  <div class="list">
    <% @search_results.each do |result| %>
      <div class="card">
      <div class="row">
        <p class="col-lg-11 col-sm-9 header-text">
          HEADER - TITLE OF PAGE
        </p>
        <p class="col-lg-1 col-sm-3 header-text">
          Stars
        </p>
      </div>
      <div>
      Description
      </div>
      <%= link_to result,result, class: "link-css" %>
      </div>
    <% end %>
  </div>
</div>

